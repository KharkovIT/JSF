<hibernate-mapping>
<class name="entity.Option" table="options" catalog="mydb">
    <id name="idQuestion" type="java.lang.Integer">
        <column name="id"/>
        <generator class="identity"/>
    </id>
    <property name="option" type="java.lang.String">
        <column name="firstName" length="30" not-null="true" unique="false"/>
    </property>

</class>
</hibernate-mapping>